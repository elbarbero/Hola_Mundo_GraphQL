{
  "name": "hola-mundo",
  "version": "1.0.0",
  "description": "Hola Mundo en GraphQL",
  "main": "build/server.js",
  "scripts": {
    "start": "node build/server.js",
    "build": "tsc -p . && ncp src/schema build/schema",
    "start:dev": "npm run build:dev",
    "build:dev": "nodemon \"src/server.ts\" --exec \"ts-node\" src/server.ts -e ts,garphql",
    "publish": "npm run build && now --prod"
  },
  "keywords": [
    "graphql",
    "hola-mundo",
    "hola",
    "mundo"
  ],
  "author": "Mario Barbero Santillan <mario.barbero89@gmail.com>",
  "license": "MIT",
  "dependencies": {
    "apollo-server-express": "^2.13.1",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "express": "^4.17.1",
    "graphql": "^15.0.0",
    "graphql-import-node": "0.0.4",
    "graphql-playground-middleware-express": "^1.7.14",
    "graphql-tag-pluck": "^0.8.7",
    "graphql-tools": "^5.0.0",
    "http": "0.0.1-security",
    "install": "^0.13.0",
    "ncp": "^2.0.0",
    "typescript": "^3.8.3"
  },
  "devDependencies": {
    "@types/compression": "^1.7.0",
    "@types/cors": "^2.8.6",
    "@types/express": "^4.17.6",
    "@types/express-graphql": "^0.9.0",
    "@types/graphql": "^14.5.0",
    "@types/node": "^13.13.5"
  }
}
